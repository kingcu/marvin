<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

    <TextView 
        android:id="@+id/message_form_title"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:gravity="center_horizontal"
	    android:padding="10sp"
	    android:textSize="18sp"
        android:text="@+string/message_form_title"/>
	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<TextView
			android:id="@+id/new_message_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:padding="5sp"
			android:textSize="14sp"
			android:text="" />
		<TextView
			android:id="@+id/new_message_num"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:padding="5sp"
			android:textSize="14sp"
			android:text="" />
		<EditText
			android:id="@+id/new_message_body"
			android:layout_width="fill_parent"
			android:layout_height="200dip"
			android:padding="5sp"
			android:textSize="12sp" />

		<Button android:id="@+id/new_message_submit_button"
            android:text="@+string/new_message_form_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
